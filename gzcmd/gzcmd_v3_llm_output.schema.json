{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GZ-CMD++ v3 LLM clerical review output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "pair_id",
    "decision",
    "confidence",
    "reason_codes",
    "evidence_summary",
    "quality_flags"
  ],
  "properties": {
    "pair_id": {
      "type": "string",
      "minLength": 8
    },
    "decision": {
      "type": "string",
      "enum": [
        "MATCH",
        "NONMATCH",
        "UNSURE"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "reason_codes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 12
    },
    "evidence_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "supports_match",
        "supports_nonmatch",
        "tie_breakers"
      ],
      "properties": {
        "supports_match": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 10
        },
        "supports_nonmatch": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 10
        },
        "tie_breakers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 10
        }
      }
    },
    "quality_flags": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "pii_leak_detected",
        "insufficient_evidence",
        "inconsistent_input"
      ],
      "properties": {
        "pii_leak_detected": {
          "type": "boolean"
        },
        "insufficient_evidence": {
          "type": "boolean"
        },
        "inconsistent_input": {
          "type": "boolean"
        }
      }
    }
  }
}